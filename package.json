{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:css": "tailwindcss -m -i app/styles/tailwind.css -o app/styles/app.css",
    "build:remix": "remix build",
    "build:server": "esbuild --bundle --format=cjs --platform=node --outfile=build/server.js app/server.ts",
    "dev": "concurrently \"remix build\" \"npm:dev:*\"",
    "dev:css": "tailwindcss -w -i app/styles/tailwind.css -o app/styles/app.css",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./app/server.ts --watch ./app/server.ts",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-run/express": "^1.10.1",
    "@remix-run/node": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "chess.js": "^1.0.0-beta.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "isbot": "^3.6.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-chessboard": "^2.0.8",
    "react-dom": "^18.2.0",
    "sanitize-html": "^2.8.1",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/sanitize-html": "^2.8.0",
    "concurrently": "^7.6.0",
    "daisyui": "^2.47.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14"
  }
}
